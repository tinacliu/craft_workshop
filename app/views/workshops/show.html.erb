  <div class="container-workshop px-5 py-5 shadow-sm">
    <div class="row bg-white py-2">

      <div class="col-8 border-right">
        <div>
          <h5 class="underline blue m_font"><%= @workshop.category %></h5>
          <h4 class="grey l_font"><%= @workshop.name %></h4>
        </div>

        <div class="d-flex">

          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <% @workshop.photos.each_with_index do |photo, index| %>
                <div class="carousel-item <%= index == 0 ? 'active' : '' %>">
                  <div class="img_show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= photo.image %>)">
                  </div>
                </div>
              <% end %>

                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                  <span class="carousel-control-prev-icon " aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                  <span class="carousel-control-next-icon " aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a>
            </div>
          </div>

            <%= render 'workshops/workshop_info_list' %>
        </div>


          <div class= p_show>
            <h5 class="underline m_font blue">Description:</h5>
            <p class="mt-2 grey font-weight-light">
              <%= @workshop.description %>
            </p>
          </div>
      </div>

      <div class="col-4 px-5">
        <%= render 'bookings/form', workshop: @workshop %>
      </div>

    </div>
  </div>


