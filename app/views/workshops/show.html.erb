  <div class="container-workshop px-5 py-5 shadow-sm">
    <div class="row bg-white py-2">

      <div class="col-8 border-right">
        <div>
          <h5 class="underline blue m_font"><%= @workshop.category %></h5>
          <h4 class="grey m_font mb-0"><%= @workshop.name %></h4>
        </div>

        <div class="d-flex">
          <%= render 'workshops/carousel' %>
          <%= render 'workshops/workshop_info_list' %>
        </div>

        <div class="d-flex align-items-center">
          <div class= p_show>
            <h5 class="underline m_font blue">Description</h5>
            <p class="my-2 grey font-weight-light">
              <%= @workshop.description %>
            </p>

            <h6 class="m_font text-muted mt-3">Location</h6>
            <%= render 'workshops/map' %>
          </div>
          <div class="owner-card shadow-sm">
            <% if @workshop.owner.photo.present? %>
              <%= cl_image_tag @workshop.owner.photo, crop: :fill, class: "avatar-medium shadow-sm border border-light mb-3" %>
            <% else %>
              <%= image_tag "https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png", class: "avatar-medium shadow-sm border border-light mb-3" %>
            <% end %>
            <p class="gray bold border-bottom pb-2">
              <span class=""><%= "#{@workshop.owner.first_name} #{@workshop.owner.last_name}" %></span>
            </p>
            <%= render 'workshops/fake_user_bio' %>
          </div>
        </div>

      </div>

      <div class="col-4 px-5">
        <%= render 'bookings/form', workshop: @workshop %>
      </div>

    </div>
  </div>


