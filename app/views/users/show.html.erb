

<div class="container-profile mx-auto">
  <div class="col-xs-6 col-md-3">



    <%= render 'users/profile_card' %>
  </div>

  <div class="col-xs-12 col-md-8 bg-white shadow-sm px-4 py-4">
    <!-- <div> -->
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Attending</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Teaching</a>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">

    <div class="row align-items-center">
      <h5 class="mt-4 px-2 pl-4 m_font underline">Upcoming Classes </h5>
      <%= link_to workshops_path do %>
        <i class="fas fa-plus-circle blue mt-4 "></i>
      <% end %>
    </div>

    <div class="profile-right-grid">
      <%= render 'users/workshop_booking_card' %>
    </div>

    <hr>
    <div class="row">
      <h5 class="text-muted mt-4 pl-2 pb-2 underline m_font">Past Classes </h5>
    </div>
    <div class="profile-right-grid">
      <% if @user.workshops_as_student.where("date_time<?", Date.today).size == 0 %>
      <div class="card-workshop-sm-gray border text-muted mb-3">None found</div>
      <% end %>
    </div>


    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <h7 class="green thin mt-5 px-2 pl-3 m_font underline">Upcoming Classes </h7>

    <div class="profile-right-grid">
      <%= render 'users/workshop_as_owner' %>
    </div>
     <hr>

    <h5 class="text-muted mt-5 pl-2 pb-2 underline m_font">Past Classes </h5>
    <div class="profile-right-grid">
      <% if @user.workshops_as_student.where("date_time<?", Date.today).size == 0 %>
      <div class="card-workshop-sm-gray border text-muted mb-3">None found</div>
      <% end %>
    </div>

    </div>
    </div>
  </div>
</div>


